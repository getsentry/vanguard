{
  "name": "vanguard",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:remix && npm run build:server",
    "build:remix": "cross-env NODE_ENV=production remix build --sourcemap && npm run sentry:upload-sourcemaps && find ./public/build -type f -name '*.map' -delete && find ./build -type f -name '*.map' -delete",
    "build:server": "esbuild --platform=node --bundle --format=cjs ./server.ts --outdir=build --sourcemap=external",
    "db:migrate": "run-p db:migrate:*",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma db push --accept-data-loss",
    "db:seed": "npx prisma db seed",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development nodemon --exec 'esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle && node --require dotenv/config ./build/server.js' --watch ./server.ts",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "run-p postinstall:*",
    "postinstall:git-hooks": "simple-git-hooks",
    "postinstall:prisma": "npx prisma generate",
    "sentry:upload-sourcemaps": "if test \"$NODE_ENV\" = \"production\"; then node ./node_modules/@sentry/remix/scripts/sentry-upload-sourcemaps.js --release $SENTRY_RELEASE; fi",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require dotenv/config ./build/server.js",
    "test": "run-s db:migrate:test test:vitest",
    "test:vitest": "dotenv -e .env.test -- vitest --no-threads",
    "test:ci": "run-s db:migrate:test test:ci:*",
    "test:ci:vitest": "dotenv -e .env.test -- vitest --no-threads --coverage --reporter=junit --outputFile=junit.xml --reporter=default",
    "typecheck": "tsc -b",
    "user": "ts-node -r esbuild-register -r dotenv/config ./bin/user.ts",
    "category": "ts-node -r esbuild-register -r dotenv/config ./bin/category.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "prisma": {
    "seed": "ts-node -r esbuild-register -r dotenv/config ./prisma/seed.ts"
  },
  "dependencies": {
