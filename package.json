{
  "name": "vanguard",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build --sourcemap",
    "build:server": "esbuild --platform=node --bundle --format=cjs ./server --outdir=build --sourcemap=external",
    "build:sourcemaps": "sentry-upload-sourcemaps",
    "db:migrate": "run-p db:migrate:*",
    "db:migrate:dev": "npx prisma migrate dev && npx prisma db seed",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma db push --accept-data-loss",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test": "run-s db:migrate:test test:vitest",
    "test:vitest": "dotenv -e .env.test -- vitest --no-threads",
    "test:ci": "run-s db:migrate:test test:ci:*",
    "test:ci:vitest": "dotenv -e .env.test -- vitest --no-threads --coverage --reporter=junit --outputFile=junit.xml --reporter=default",
    "typecheck": "tsc -b",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@google-cloud/storage": "^5.19.1",
    "@prisma/client": "^4.12.0",
    "@radix-ui/colors": "^0.1.8",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-tabs": "^1.0.3",
    "@radix-ui/react-toolbar": "^1.0.3",
    "@remix-run/express": "^1.15.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/server-runtime": "^1.15.0",
    "@sentry/remix": "^7.46.0",
    "@types/node": "^17.0.45",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "cuid": "^2.1.8",
    "emoji-picker-react": "^3.6.1",
    "express": "^4.18.2",
    "isomorphic-dompurify": "^0.24.0",
    "jsonwebtoken": "^8.5.1",
    "marked": "^4.3.0",
    "moment": "^2.29.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "prisma": "^4.12.0",
    "prism-sentry": "^1.0.2",
    "prismjs": "^1.27.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.2.0",
    "react-textarea-autosize": "^8.4.1",
    "remix-auth": "^3.2.2",
    "remix-auth-oauth2": "^1.6.0",
    "slugify": "^1.6.6",
    "styled-components": "^5.3.5",
    "styled-components-breakpoint": "^2.1.1",
    "textarea-markdown-editor": "^1.0.4",
    "tiny-invariant": "^1.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.0.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.1",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/marked": "^4.0.8",
    "@types/morgan": "^1.9.3",
    "@types/nodemailer": "^6.4.4",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/styled-components": "^5.1.25",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.4",
    "c8": "^7.11.0",
    "dotenv-cli": "^6.0.0",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^2.55.0",
    "msw": "^0.49.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23",
    "vite": "^2.9.16",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.8.5"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "volta": {
    "node": "18.12.1"
  }
}
